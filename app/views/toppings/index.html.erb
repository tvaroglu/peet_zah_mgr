<h1 class="text-2xl font-bold mb-4 text-gray-800">Toppings</h1>

<div class="mb-3">
  <%= link_to "New Topping", new_topping_path,
        class: "inline-block bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
</div>

<ul class="mt-4 space-y-2">
  <% @toppings.each do |topping| %>
    <li id="topping-<%= topping.id %>" class="bg-white shadow-sm rounded px-4 py-3 flex justify-between items-center">
      <span class="font-semibold text-gray-900"><%= topping.name %></span>
      <div class="space-x-3 flex items-center">
        <%= link_to "Edit", edit_topping_path(topping),
              class: "text-blue-600 hover:underline" %>
        <%= button_to "Delete", topping_path(topping),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this topping?" },
              form: { class: "inline" },
              class: "text-red-600 hover:underline bg-transparent border-none cursor-pointer p-0" %>
      </div>
    </li>
  <% end %>
</ul>
